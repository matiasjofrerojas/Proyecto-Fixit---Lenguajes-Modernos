<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/backgroundapp">

    <!-- Encabezado -->
    <TextView
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/servicios"
        android:textSize="22sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:background="@color/header"
        android:gravity="center"
        android:padding="25dp"/>
    
        <!-- Botones de servicios -->
        <Button
            android:id="@+id/btnServicio1"
            android:layout_width="315dp"
            android:layout_height="100dp"
            android:text="@string/nombre_apellido_servicios"
            android:layout_below="@id/header"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="70dp"
            android:textColor="@color/white"
            android:textSize="26sp"/>

        <Button
            android:id="@+id/btnServicio2"
            android:layout_width="315dp"
            android:layout_height="100dp"
            android:text="@string/nombre_apellido_servicios"
            android:layout_below="@id/btnServicio1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:textColor="@color/white"
            android:textSize="26sp"/>

        <Button
            android:id="@+id/btnServicio3"
            android:layout_width="315dp"
            android:layout_height="100dp"
            android:text="@string/nombre_apellido_servicios"
            android:layout_below="@id/btnServicio2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:textColor="@color/white"
            android:textSize="26sp"/>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottomNavigationView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/header"
            app:itemTextColor="@color/white"
            app:itemIconTint="@color/ripple_fondo"
            app:labelVisibilityMode="labeled"
            app:menu="@menu/bottom_menu"
            android:layout_gravity="bottom" />
    </LinearLayout>

</RelativeLayout>
